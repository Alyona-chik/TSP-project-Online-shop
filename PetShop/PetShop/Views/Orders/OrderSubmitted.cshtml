@model PetShop.Models.Order

@{
    ViewData["Title"] = "UpdateInformation";
    long i = Model.Id;
    long a = i;
}
<form method="post" asp-action="UpdateInformation">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Order Information</h4>
            <p class="card-text">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DeliveryDate" />
                <input type="hidden" asp-for="OrderDate" />
                <input type="hidden" asp-for="CartId" />
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </p>
            <button type="submit" asp-action="UpdateInformation" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</form>



